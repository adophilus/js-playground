{
	"compilerOptions": {
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"composite": true
	},
	"include": ["./{src,scripts}/**/*.ts"],
	"extends": "../tsconfig.json",
	"references": [
		{
			"path": "../tsconfig.json"
		}
	]
}
